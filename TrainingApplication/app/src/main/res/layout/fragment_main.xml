<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@color/textField"
        android:inputType="textMultiLine"
        android:text="Enter any Text and press the Button"
        android:textAlignment="center"
        android:layout_weight="0.28" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="144dp">

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="337dp"
        android:layout_height="196dp"
        android:layout_gravity="bottom|center"
        android:orientation="vertical">

        <Button
            android:id="@+id/ChangeTextButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Toast" />

        <Button
            android:id="@+id/pic_page_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stark House" />

        <Button
            android:id="@+id/users_page_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:text="Lannister House" />
    </LinearLayout>

</LinearLayout>